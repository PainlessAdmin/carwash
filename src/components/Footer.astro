---
const quickLinks = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/#about' },
  { label: 'Services', href: '/#services' },
  { label: 'Pricing', href: '/#pricing' },
  { label: 'Blog', href: '/blog' },
];

const supportLinks = [
  { label: 'Help Center', href: '#' },
  { label: 'Disclaimer', href: '#' },
  { label: 'Privacy Policy', href: '#' },
  { label: 'FAQs', href: '/#faqs' },
  { label: 'Contact', href: '/contact' },
];

const socialLinks = [
  { icon: 'facebook', href: '#' },
  { icon: 'twitter', href: '#' },
  { icon: 'youtube', href: '#' },
  { icon: 'linkedin', href: '#' },
];
---

<footer class="bg-dark text-white">
  <!-- Main Footer -->
  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10">
      <!-- Logo & Description -->
      <div>
        <a href="/" class="flex items-center gap-2 mb-6">
          <div class="relative">
            <svg width="50" height="35" viewBox="0 0 60 40" fill="none" xmlns="http://www.w3.org/2000/svg">
              <ellipse cx="20" cy="18" rx="12" ry="8" fill="#F5E642"/>
              <ellipse cx="32" cy="16" rx="10" ry="7" fill="#F5E642"/>
              <ellipse cx="26" cy="20" rx="14" ry="9" fill="#F5E642"/>
              <path d="M15 28C15 28 18 22 26 22C34 22 42 22 45 28L15 28Z" fill="white"/>
              <circle cx="20" cy="28" r="3" fill="white"/>
              <circle cx="40" cy="28" r="3" fill="white"/>
            </svg>
          </div>
          <span class="text-xl font-bold tracking-tight">AQUWASH</span>
        </a>
        <p class="text-gray-400 text-sm mb-6">
          Lorem ipsum dolor sit amet, consec tetur adipiscing elit. Ut elit tellus.
        </p>
        <div class="flex gap-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="w-9 h-9 bg-gray-700 rounded-full flex items-center justify-center hover:bg-accent hover:text-dark transition-colors"
            >
              {social.icon === 'facebook' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                </svg>
              )}
              {social.icon === 'twitter' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                </svg>
              )}
              {social.icon === 'youtube' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                </svg>
              )}
              {social.icon === 'linkedin' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Contacts -->
      <div>
        <h4 class="text-lg font-semibold mb-6">Contacts</h4>
        <ul class="space-y-4 text-gray-400 text-sm">
          <li class="flex items-start gap-3">
            <span class="text-accent mt-1">A:</span>
            <span>457 Morningview Lane,<br/>New York USA</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-accent mt-1">E:</span>
            <div>
              <a href="mailto:aquwash@mails.com" class="hover:text-accent transition-colors">aquwash@mails.com</a><br/>
              <a href="mailto:example@mail.com" class="hover:text-accent transition-colors">example@mail.com</a>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-accent mt-1">P:</span>
            <div>
              <a href="tel:+1234567890" class="hover:text-accent transition-colors">+1 (234) 567 890</a><br/>
              <a href="tel:+0987654321" class="hover:text-accent transition-colors">+0 (987) 654 321</a>
            </div>
          </li>
        </ul>
      </div>

      <!-- Quicklinks -->
      <div>
        <h4 class="text-lg font-semibold mb-6">Quicklinks</h4>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 text-sm hover:text-accent transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Support -->
      <div>
        <h4 class="text-lg font-semibold mb-6">Support</h4>
        <ul class="space-y-3">
          {supportLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 text-sm hover:text-accent transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-700">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-400">
        <p>Copyright &copy; {new Date().getFullYear()} ASK Project</p>
        <div class="flex gap-6">
          <a href="#" class="hover:text-accent transition-colors">Privacy Policy</a>
          <a href="#" class="hover:text-accent transition-colors">Terms & Services</a>
        </div>
      </div>
    </div>
  </div>
</footer>
