// Organization Schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": `${siteUrl}/#organization`,
  "name": "Painless Car & Van Wash",
  "legalName": "PAINLESS VAN & CAR VALETING LTD",
  "url": siteUrl,
  "logo": `${siteUrl}/images/Bristol-Car-Wash-logo.webp`,
  "foundingDate": "2024",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+447977889747",
    "contactType": "customer service",
    "email": "hello@bristolcarwash.co.uk",
    "availableLanguage": "English"
  },
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "290-294 Southmead Road",
    "addressLocality": "Bristol",
    "postalCode": "BS10 5EN",
    "addressCountry": "GB"
  },
  "sameAs": [
    "https://share.google/m8qhZn8y0hSYzbgqx"
  ]
};

// WebSite Schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${siteUrl}/#website`,
  "name": "Painless Car & Van Wash",
  "url": siteUrl,
  "publisher": {
    "@id": `${siteUrl}/#organization`
  }
};

// FAQPage Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Do I need to book in advance?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No booking required! Simply drive in during our opening hours. For larger vehicles or full valets, we recommend calling ahead to ensure minimal wait time."
      }
    },
    {
      "@type": "Question",
      "name": "How long does a full valet take?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "A full valet typically takes 2-3 hours depending on the size and condition of your vehicle. We recommend dropping off your car and collecting it later, or you can wait in our comfortable waiting area."
      }
    },
    {
      "@type": "Question",
      "name": "Do you offer mobile valeting services?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, we offer mobile valeting for vans and larger vehicles. Contact us to discuss your requirements and get a quote."
      }
    },
    {
      "@type": "Question",
      "name": "What payment methods do you accept?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We accept cash, all major credit and debit cards, and contactless payments including Apple Pay and Google Pay."
      }
    }
  ]
};

// Service Schema for main services
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Car Wash and Valeting",
  "provider": {
    "@id": `${siteUrl}/#business`
  },
  "areaServed": {
    "@type": "City",
    "name": "Bristol"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Valeting Services",
    "itemListElement": [
      {
        "@type": "OfferCatalog",
        "name": "Car Wash",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Car Wash" } }
        ]
      },
      {
        "@type": "OfferCatalog",
        "name": "Van Wash",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Van Wash" } }
        ]
      },
      {
        "@type": "OfferCatalog",
        "name": "Car Valeting",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Car Valeting" } }
        ]
      },
      {
        "@type": "OfferCatalog",
        "name": "Van Valeting",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Van Valeting" } }
        ]
      }
    ]
  }
};

// BreadcrumbList Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": siteUrl
    }
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Painless Car & Van Wash" />
    <link rel="canonical" href={siteUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | Painless Car & Van Wash Bristol`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={`${siteUrl}/images/Bristol-Car-Valeting.webp`} />
    <meta property="og:site_name" content="Painless Car & Van Wash" />
    <meta property="og:locale" content="en_GB" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Painless Car & Van Wash Bristol`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}/images/Bristol-Car-Valeting.webp`} />

    <!-- Geo Tags -->
    <meta name="geo.region" content="GB-BST" />
    <meta name="geo.placename" content="Bristol" />
    <meta name="geo.position" content="51.5002;-2.5927" />
    <meta name="ICBM" content="51.5002, -2.5927" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Inter:wght@400;500;600;700&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    </noscript>

    <title>{title} | Painless Car & Van Wash Bristol</title>

    <!-- Schema.org Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  </head>
  <body class="antialiased">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <BookingForm />
  </body>
</html>
